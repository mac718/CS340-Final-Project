<html lang="en">
    <head>
        <meta charset="UTF-8">
        <link href="./static/styles.css" rel="stylesheet" type="text/css">
        <title>Customers</title>
    </head>
    <body>
        <h1>Customers</h1>
        <ul>
            <li><a href="/customers">Customers</a></li> 
            <li><a href="/orders">Orders</a></li> 
            <li><a href="/products">Products</a></li> 
            <li><a href="/scents">Scents</a></li> 
        </ul>
        
        <table>
        <thead>
        <tr>
            <!-- Iterate through each key in the first entry to get the
            column name -->
            {% for key in data[0].keys() %}

            <!-- Create a <th> tag with the key inside of it, this will be
            our header row -->
            <th>{{ key }}</th>

            <!-- End of this for loop -->
            {% endfor %}
        </tr>
        <tbody>

        <!-- Now, iterate through every person in bsg_people -->
        {% for customer in data %}
        <tr>
            <!-- Then iterate through every key in the current person dictionary -->
            {% for key in customer.keys() %}

            <!-- Create a <td> element with the value of that key in it -->
            <td>{{customer[key]}}</td>
            {% endfor %}
            <td><a href="delete_customer/{{customer.customer_id}}" class="btn btn-default">Delete</a></td>
            <td><a href="edit_customer/{{customer.customer_id}}" class="btn btn-default">Edit</a></td>
        </tr>
        {% endfor %}
        </table>
        
        <!--BEGIN INSERT-->
        <div id="insert">
		<!-- form to INSERT new data into bsg_people-->
		<form id="insertCustomer" action="/customers" method="post">
			<legend><strong>Add Person</strong></legend>
			<fieldset>
                <!-- placeholder shows ghost text, required forces an input, pattern forces input adherence -->
				<label for="name">Name:</label>
				<input type="text" class="form-control" id="name" name="name" placeholder="" required>

				<label for="model">Email:</label>
				<input type="text" class="form-control" id="email" name="email" placeholder="" required>

				<label for="year">Password:</label>
				<input type="text" class="form-control" id="password" name="password" placeholder="" required>

            </fieldset>

            <!-- Create 'Add Person' and 'Cancel' buttons -->
			<input type="submit" value="Add Customer" name="Add_Customer" class="btn btn-primary" style="margin:.5rem;">
			<input class="btn" type="button" value="Cancel" onClick="browsePeople()">
        </form>
	</div><!--insert-->
    </body>
</html>
