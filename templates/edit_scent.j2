<html>

<head>
	<title>Edit Scent</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div>
        <table border="1" cellpadding="5"> 
            <caption> Editing Scent: </caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}
                        
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>

        <div id="edit">
            <!-- form to edit data in Scent-->
            {{data[0]}}
            <form id="editScent" action="/edit_scent/{{data[0].scent_id}}" method="post">
                <legend><strong>Edit Scent</strong></legend>
                <fieldset>
                    <input type="hidden" value="{{data[0].scent_id}}" class="form-control" id="scent_id" name="scent_id" required>
                    <label for="scent">Description:</label>
                    <input type="text" value="{{data[0].description}}" class="form-control" id="description" name="description" required>


                </fieldset>
                <input type="submit" value="Edit Scent" name="Edit_Scent" class="btn btn-primary" style="margin:.5rem;">
                <a href='/scents'><input class="btn" type="button" value="cancel"></a>
            </form>

</html>

