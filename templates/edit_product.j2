<html>

<head>
	<title>Edit Product</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div>
        <table border="1" cellpadding="5"> 
            <caption> Editing Order: </caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}
                        
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>

        <div id="edit">
            <!-- form to edit data in Product-->
            {{data[0]}}
            <form id="editProduct" action="/edit_product/{{data[0].product_id}}" method="post">
                <legend><strong>Edit Product</strong></legend>
                <fieldset>
                    <input type="hidden" value="{{data[0].product_id}}" class="form-control" id="product_id" name="product_id" required>
                    <label for="scent">Scent:</label>
                    <input type="text" value="{{data[0].scent}}" class="form-control" id="scent" name="scent" required>

                    <label for="price">Price:</label>
                    <input type="text" value="{{data[0].price}}" class="form-control" id="price" name="price" required>

                    <label for="product_type">Product Type:</label>
                    <input type="text" value="{{data[0].product_type}}" class="form-control" id="product_type" name="product_type" required>

                    <label for="inventory">Inventory:</label>
                    <input type="text" value="{{data[0].inventory}}" class="form-control" id="inventory" name="inventory" required>
                
                </fieldset>
                <input type="submit" value="Edit Product" name="Edit_Product" class="btn btn-primary" style="margin:.5rem;">
                <a href='/products'><input class="btn" type="button" value="cancel"></a>
            </form>

</html>
